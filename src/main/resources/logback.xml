<configuration>

    <!--
    This suppresses Logback's internal status messages that appear during
    initialization before your configuration is fully loaded.
    -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="json" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="cz.gov.data.logging.LogEncoder"/>
    </appender>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{"HH:mm:ss,SSS"} [%thread] %level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Use INGO of value from LOG_LEVEL variable. -->
    <root level="${LOG_LEVEL:-INFO}">
        <appender-ref ref="json"/>
    </root>

</configuration>
